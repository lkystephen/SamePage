<!-- res/layout/event_people_list_item.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/people_outer_circle"
            android:gravity="center">

            <ImageView
                android:id="@+id/friends_image"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/star60" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.projecttesting.MyTextView
            android:id="@+id/peopleName"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.example.projecttesting.MyTextView
            android:id="@+id/peopleSelectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friend_selected"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/checked" />

    </LinearLayout>

    <View style="@style/EventDivider" />

</LinearLayout><!-- From: file:/C:/Users/Capco/Desktop/Project/SamePage/app/src/main/res/layout/event_people_list_item.xml -->