<!-- res/layout/list_item.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/map25" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:orientation="vertical">

        <com.example.projecttesting.MyTextView
            android:id="@+id/resulttext"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp"
            custom:fontName="sf_reg.ttf"/>

        <com.example.projecttesting.MyTextView
            android:id="@+id/placesecondname"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:textColor="#7f7f7f"
            android:textSize="14sp"
            custom:fontName="sf_ulight.ttf" />

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/edmundlee/Documents/SamePage/app/src/main/res/layout/event_location_list_item.xml -->