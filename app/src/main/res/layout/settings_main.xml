<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friends_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.8"
            android:gravity="center">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/logged_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logged_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logged in as:"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/facebook_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/notify_friend_nearby"
            android:textSize="18sp"
            android:layout_marginStart="3dp"
            android:textColor="#ffffff"
            android:id="@+id/friend_notify_nearby"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:checked="true"
            android:id="@+id/friends_nearby_switch"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/notify_event_soon"
            android:textSize="18sp"
            android:layout_marginStart="3dp"
            android:textColor="#ffffff"
            android:id="@+id/notify_event_soon"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:checked="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/notify_event_switch"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/set_all_star"
            android:textSize="18sp"
            android:layout_marginStart="3dp"
            android:textColor="#ffffff"
            android:id="@+id/set_all_star"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:checked="false"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/set_all_unstar"
            android:textSize="18sp"
            android:layout_marginStart="3dp"
            android:textColor="#ffffff"
            android:id="@+id/set_all_unstar"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:checked="false"/>

    </LinearLayout>

</LinearLayout>